<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/details_card_view_margin_general"
    android:layout_marginLeft="@dimen/details_card_view_margin_general"
    android:layout_marginRight="@dimen/details_card_view_margin_general"
    android:layout_marginTop="@dimen/details_card_view_margin_general"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="250dp"
                android:layout_height="400dp"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/speaker"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/padding"
                    android:src="@drawable/ic_headset_black_24dp"
                    android:scaleType="fitCenter"
                    android:text="k" />

                <ImageButton
                    android:id="@+id/speaker1"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_highlight_black_24dp"
                    android:scaleType="fitCenter"
                    android:padding="@dimen/padding"
                    android:text="k" />

                <ImageButton
                    android:id="@+id/speaker2"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:padding="@dimen/padding"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:text="k" />

                <ImageButton
                    android:id="@+id/speaker4"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_show_chart_black_24dp"
                    android:padding="@dimen/padding"
                    android:text="k" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dictionary_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/details_article_title_padding_bottom"
            android:paddingLeft="@dimen/details_article_padding_general"
            android:paddingRight="@dimen/details_article_padding_general"
            android:paddingTop="@dimen/details_article_padding_general" />

        <TextView
            android:id="@+id/dictionary_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/details_article_padding_general"
            android:paddingLeft="@dimen/details_article_padding_general"
            android:paddingRight="@dimen/details_article_padding_general"
            android:textColor="@color/colorAccent" />
    </LinearLayout>


</android.support.v7.widget.CardView>